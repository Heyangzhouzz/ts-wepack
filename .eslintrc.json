{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
	    "import/no-dynamic-require": "off",
	    "import/no-unresolved": "off",
	    "import/extensions": "off",
	    "consistent-return": "off",
	    "class-methods-use-this": "off"
    }
}
